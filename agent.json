{
  "model": "claude-sonnet-4",
  "temperature": 0.2,
  "mcpServers": {
    "developer": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@soapbox.pub/developer-mcp@latest"
      ]
    },
    "nostr": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@nostrbook/mcp@latest"
      ]
    },
    "pubdev": {
      "type": "stdio",
      "command": "dart mcp/pubdev_mcp.dart"
    }
  }
}